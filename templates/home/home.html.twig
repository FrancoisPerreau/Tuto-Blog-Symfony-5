{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Bienvenue sur la page d'accueil</h1>
<div class="row">
    {% for article in articles %}
    <div class="card col-md-4" style="width: 18rem;">
        <p class="date text-muted">Ecrit le {{ article.createdAt | date("d/m/Y Ã  H:i")}}</p>
        <img class="card-img-top" src="{{ article.image }}" alt="{{ article.title }}">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.content|slice(0, 30) }}...</p>
            <a href="{{ path("show_article", {'id': article.id}) }}" class="btn btn-primary">En savoir plus</a>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}