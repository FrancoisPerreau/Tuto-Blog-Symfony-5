{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1>Bienvenue sur la page d'accueil</h1>
<div class="row">
    {% for article in articles %}
    <div class="col-md-4 my-2">
        <div class="card" >            
            <img class="card-img-top" src="{{ asset('assets/blog/uploads/') ~ article.image }}" alt="{{ article.title }}">
            <div class="card-body">
                <p class="date text-muted">Ecrit le {{ article.createdAt | date("d/m/Y Ã  H:i")}}</p>
                <h5 class="card-title">{{ article.title }}</h5>
                <p class="card-text">
                    {{ article.content|length > 50 ? article.content|striptags|slice(0, 50) ~ '...' : article.content }}
                </p>                
                <a href="{{ path("show_article", {'id': article.id}) }}" class="btn btn-primary">En savoir plus</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}